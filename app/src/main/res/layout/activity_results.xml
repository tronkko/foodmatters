<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:clickable="true"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:fillViewport="false"
            android:layout_alignParentRight="true"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="12"
                android:columnCount="4"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy:"
                    android:id="@+id/energy_label"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/fat_value"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:text="3,3"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/fat_unit"
                    android:layout_column="2"
                    android:layout_row="6"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/energy_value"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:text="2254"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:id="@+id/energy_unit"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat:"
                    android:id="@+id/fat_label"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates:"
                    android:id="@+id/hydrate_label"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/carbohydrate_value"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:text="0,7"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/hydrate_unit"
                    android:layout_row="7"
                    android:layout_column="2"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar:"
                    android:id="@+id/sugar_label"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/sugar_value"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:text="0,1"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/sugar_unit"
                    android:layout_row="8"
                    android:layout_column="2"
                    android:textColor="#14743b"/>

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

