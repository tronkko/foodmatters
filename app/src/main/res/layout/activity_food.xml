<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:clickable="true"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_above="@+id/textView6"
            android:layout_alignParentTop="true"
            android:fillViewport="false"
            android:layout_alignParentRight="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="12"
                android:columnCount="4"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufacturer:"
                    android:id="@+id/manufacturer_label"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"
                    android:layout_columnWeight="0"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/manufacturer_value"
                    android:layout_below="@+id/product_value"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="#14743b"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="HuhtahyvÃ¤t"
                    android:textColor="#14743b"
                    android:layout_columnWeight="0"
                    android:layout_gravity="left"
                    android:layout_columnSpan="2"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_value"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:singleLine="true"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="left|right"
                    android:text="Meetvursti"
                    android:textIsSelectable="false"
                    android:enabled="true"
                    android:layout_columnSpan="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product:"
                    android:id="@+id/product_label"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:id="@+id/size_label"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:id="@+id/quantity_label"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textColor="#14743b"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ean_value"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="123234234234"
                    android:layout_gravity="left|right"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:inputType="number"
                    android:enabled="true"
                    android:layout_columnSpan="2"/>

                <Spinner
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:id="@+id/unit_value"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="top|bottom"
                    android:spinnerMode="dialog"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/size_value"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"
                    android:text="300"
                    android:singleLine="true"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:layout_gravity="left"
                    android:enabled="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned|numberDecimal"
                    android:ems="6"
                    android:id="@+id/quantity_value"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"
                    android:text="1"
                    android:singleLine="true"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:layout_gravity="left"
                    android:enabled="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pcs"
                    android:id="@+id/quantity_unit"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EAN:"
                    android:id="@+id/ean_label"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy:"
                    android:id="@+id/energy_label"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/fat_value"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:text="3,3"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/fat_unit"
                    android:layout_column="2"
                    android:layout_row="6"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/energy_value"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:text="2254"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:id="@+id/energy_unit"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat:"
                    android:id="@+id/fat_label"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates:"
                    android:id="@+id/hydrate_label"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/carbohydrate_value"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:text="0,7"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/hydrate_unit"
                    android:layout_row="7"
                    android:layout_column="2"
                    android:textColor="#14743b"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar:"
                    android:id="@+id/sugar_label"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="#14743b"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/sugar_value"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:text="0,1"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#14743b"
                    android:backgroundTint="#14743b"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:enabled="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/sugar_unit"
                    android:layout_row="8"
                    android:layout_column="2"
                    android:textColor="#14743b"/>

            </GridLayout>
        </ScrollView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:background="#14743b"
            android:layout_above="@+id/relativeLayout"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="0"
            android:layout_alignParentLeft="true"
            android:id="@+id/relativeLayout"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/store_button"
                android:layout_column="0"
                android:layout_row="0"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTintMode="src_over"
                android:background="#14743b"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Substract"
                android:id="@+id/remove_button"
                android:layout_column="0"
                android:layout_row="0"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:background="#d02400"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
