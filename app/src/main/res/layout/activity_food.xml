<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:clickable="true"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_value"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:text="Product"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout2"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="9"
                android:columnCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:id="@+id/quantity_label"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/quantity_value"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Package"
                    android:id="@+id/textView4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:id="@+id/size_label"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ean_value"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="123234234234"
                    android:layout_gravity="left|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nutritional Facts per 100 g"
                    android:id="@+id/textView2"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginTop="20dp"/>

                <Spinner
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:id="@+id/unit_value"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="top|left|bottom|right"
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/size_value"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EAN:"
                    android:id="@+id/textView3"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy:"
                    android:id="@+id/energy_label"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/energy_value"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:text="2254"
                    android:textAlignment="textEnd"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:id="@+id/energy_unit"
                    android:layout_column="2"
                    android:layout_row="6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat:"
                    android:id="@+id/fat_label"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/fat_value"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:text="3,3"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/fat_unit"
                    android:layout_column="2"
                    android:layout_row="7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar:"
                    android:id="@+id/sugar_label"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/sugar_value"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:textAlignment="textEnd"
                    android:text="0,1"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/sugar_unit"
                    android:layout_row="8"
                    android:layout_column="2"/>

            </GridLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="0"
            android:layout_alignParentLeft="true"
            android:id="@+id/relativeLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eat"
                    android:id="@+id/eat_button"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_column="1"
                    android:layout_row="0"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store"
                    android:id="@+id/store_button"
                    android:layout_alignParentLeft="true"
                    android:layout_column="0"
                    android:layout_row="0"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispose"
                    android:id="@+id/dispose_button"
                    android:layout_column="2"
                    android:layout_row="0"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
